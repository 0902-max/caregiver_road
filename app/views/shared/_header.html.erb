<header>
  <% if user_signed_in? %>
    <li>
      <%= link_to t('layouts.application.logout'), users_sign_out_path, method: :delete, style: 'color: white;', class: 'link' %>
    </li>
    <li>
      <%= link_to t('layouts.application.top_page'), root_path, style: 'color: white;', class: 'link' %>
    </li>
  <% else %>
    <li>
      <%= link_to t('layouts.application.sign_up'), new_user_registration_path, style: 'color: white;', class: 'link' %>
    </li>
    <li>
      <%= link_to t('layouts.application.log_in'), new_user_session_path, style: 'color: white;', class: 'link' %>
    </li>
  <% end %>
</header>