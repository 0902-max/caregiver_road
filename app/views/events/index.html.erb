<head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          height: '500px',
          aspectRatio: 1,
          locale: 'ja',
          editable: true, // イベントを編集可能にする
          events: [
            {
              title: '介護福祉士試験（筆記）',
              start: '2024-01-28'
            },
            {
              title: '提出書類受付期間',
              start: '2024-08-09',
              end: '2024-09-08'
            },
            {
              title: '介護福祉士試験（実技）',
              start: '2024-03-03'
            }
          ]
        });
        calendar.render();

      });
    </script>
</head>
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-6">
            <div id="event-list">
                <h1><%= t('events.list_title') %></h1>
                <ul>
                    <% @events.each do |event| %>
                        <li><%= t('events.title') %>: <%= event.title %></li>
                        <li><%= t('events.start_datetime') %>: <%= event.start_datetime.strftime(t('events.date_format')) %></li>
                        <br>
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div id="event-form">
                <%= render 'form' %>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div id="calendar"></div>
        </div>
    </div>
</div>
