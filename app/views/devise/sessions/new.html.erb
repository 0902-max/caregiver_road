<br>
<h2 class="custom-h2"><%= t('devise.sessions.new.title') %></h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br>
  <div class="field">
    <%= f.label :email, t('devise.sessions.new.email_label') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :password, t('devise.sessions.new.password_label') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.new.remember_me_label') %>
    </div>
  <% end %>
  <br>

  <div class="actions">
    <%= f.submit t('devise.sessions.new.submit_button'), class: "btn btn-success" %>
  </div>
<% end %>
<br>
<br>
<%= render "devise/shared/links" %>