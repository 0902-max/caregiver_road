<style>
  /* 共通のボタンスタイル */
  .btn {
    display: inline-block;
    padding: 10px 20px; /* 上下左右の余白を調整 */
    font-size: 16px; /* フォントサイズを調整 */
    text-align: center;
    text-decoration: none;
    cursor: pointer;

    border: 2px solid;
    border-radius: 8px; /* 角丸にする */
    background-color: #FF8080; /* 成功の色、必要に応じて調整 */
    color: #000; /* テキストの色 */

    &:hover {
      background-color: #FFA080; /* ホバー時の背景色、必要に応じて調整 */
    }
  }
  .custom-card {
    background-color: #F6FDC3;
  }
  </style>
<div class="text-center">
  <br>
  <br>
  <h1><%= t('vocabulary_notes.index_title') %></h1>
  <br>
  <br>
  <br>
  <p><%= t('vocabulary_notes.introduction_1') %></p>
  <p><%= t('vocabulary_notes.introduction_2') %></p>
  <p><%= t('vocabulary_notes.introduction_3') %></p>
  <br>
  <br>
  <div class="card-deck">
    <% @vocabulary_notes.each do |note| %>
      <a href="<%= vocabulary_note_path(note) %>" class="card-link">
        <div class="card custom-card">
          <div class="card-body">
            <h5 class="card-title"><%= note.title %></h5>
            <p class="card-text"><%= note.description %></p>
          </div>
        </div>
      </a>
    <% end %>
  </div>
  <br>
  <br>
  <br>
  <%= link_to t('vocabulary_notes.create_note_button'), new_vocabulary_note_path, class: "btn" %>
</div>
