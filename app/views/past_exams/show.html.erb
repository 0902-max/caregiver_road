<style>
  /* 共通のボタンスタイル */
  .btn {
    display: inline-block;
    padding: 10px 20px; /* 上下左右の余白を調整 */
    font-size: 16px; /* フォントサイズを調整 */
    text-align: center;
    text-decoration: none;
    cursor: pointer;

    border: 2px solid;
    border-radius: 8px; /* 角丸にする */
    background-color: #FF8080; /* 成功の色、必要に応じて調整 */
    color: #000; /* テキストの色 */

    &:hover {
      background-color: #FFA080; /* ホバー時の背景色、必要に応じて調整 */
    }
  }
  .btn1 {
    display: inline-block;
    padding: 10px 20px; /* 上下左右の余白を調整 */
    font-size: 16px; /* フォントサイズを調整 */
    text-align: center;
    text-decoration: none;
    cursor: pointer;

    border: 2px solid;
    border-radius: 8px; /* 角丸にする */
    background-color: #f16272; /* 成功の色、必要に応じて調整 */
    color: #000; /* テキストの色 */

    &:hover {
      background-color: #f56272; /* ホバー時の背景色、必要に応じて調整 */
    }
  }
  </style>
<div class="text-center container mx-auto px-1 sm:px-6 mt-8">
  <div class="rounded-lg shadow-md relative p-2 sm:p-10" style="max-width: 45rem; margin: auto;">
    <div class="rounded-lg shadow-md p-4 sm:p-6 mx-auto" style="background-color: rgba(255, 255, 255, 0.8);">
      <h4>問題： <%= @question_count %>/20</h4>
      <p id="exam-text"><%= @past_exam.exam_text %></p>

      <!-- 選択肢表示 -->
      <%= form_with(model: @past_exam, url: answer_past_exam_path(@past_exam), method: 'post') do |form| %>
        <ul class="list-unstyled">
          <!-- 選択肢A -->
          <li style="padding-left: 10px; padding-right: 10px;">
            <%= button_tag type: 'submit', name: 'selected_option', value: 'a', class: 'btn w-100', style: 'margin-bottom: 10px;' do %>
              <%= @past_exam.option_a %>
            <% end %>
          </li>
          <!-- 選択肢B -->
          <li style="padding-left: 10px; padding-right: 10px;">
            <%= button_tag type: 'submit', name: 'selected_option', value: 'b', class: 'btn w-100', style: 'margin-bottom: 10px;' do %>
              <%= @past_exam.option_b %>
            <% end %>
          </li>
          <!-- 選択肢C -->
          <li style="padding-left: 10px; padding-right: 10px;">
            <%= button_tag type: 'submit', name: 'selected_option', value: 'c', class: 'btn w-100', style: 'margin-bottom: 10px;' do %>
              <%= @past_exam.option_c %>
            <% end %>
          </li>
          <!-- 選択肢D -->
          <li style="padding-left: 10px; padding-right: 10px;">
            <%= button_tag type: 'submit', name: 'selected_option', value: 'd', class: 'btn btn w-100', style: 'margin-bottom: 10px;' do %>
              <%= @past_exam.option_d %>
            <% end %>
          </li>
          <!-- 選択肢E -->
          <li style="padding-left: 10px; padding-right: 10px;">
            <%= button_tag type: 'submit', name: 'selected_option', value: 'e', class: 'btn w-100', style: 'margin-bottom: 10px;' do %>
              <%= @past_exam.option_e %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>